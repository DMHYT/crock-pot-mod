{
  "schemaVersion": 1,
  "id": "crockpot",
  "version": "${version}",

  "name": "Crock Pot",
  "description": "Adds a very simple crock pot. Heavily based on Charm's cooking pot.",
  "authors": [
    "nosrick"
  ],
  "contact": {
    "homepage": "https://github.com/Nosrick",
    "sources": "https://github.com/Nosrick/crock-pot-mod"
  },

  "license": "MIT",
  "icon": "assets/crockpot/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.gitlab.nosrick.crockpot.CrockPotMod"
    ],
    "client": [
      "com.gitlab.nosrick.crockpot.CrockPotModClient"
    ],
    "appleskin": [
      "com.gitlab.nosrick.crockpot.api.appleskin.AppleSkinEventHandler"
    ]
  },
  "mixins": [
    "crockpot.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  }
}
